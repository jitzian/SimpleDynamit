<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="1dp"
    xmlns:tools="http://schemas.android.com/tools"
    card_view:cardCornerRadius="8dp"
    card_view:cardElevation="4dp"
    card_view:cardUseCompatPadding="true"
    android:layout_marginStart="16dp"
    android:layout_marginEnd="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/mTextViewDetailCountry"
            android:textSize="24dp"
            android:transitionName="mTextViewDetailCountryTransition"
            tools:text="Country:"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/mTextViewDetailCity"
            android:transitionName="mTextViewDetailCityTransition"
            android:textSize="20dp"
            tools:text="City:"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/mTextViewDetailCount"
            android:transitionName="mTextViewDetailCountTransition"
            android:textSize="20dp"
            tools:text="Count:"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/mTextViewDetailLoremIpsum"
            android:textSize="19dp"
            android:layout_marginTop="10dp"
            tools:text="@string/lorepIpsumText"
            android:text="@string/lorepIpsumText"/>

    </LinearLayout>

</android.support.v7.widget.CardView>