<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="1dp"
    xmlns:tools="http://schemas.android.com/tools"
    card_view:cardCornerRadius="8dp"
    card_view:cardElevation="4dp"
    card_view:cardUseCompatPadding="true"
    android:layout_marginStart="16dp"
    android:layout_marginEnd="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dp">

        <RelativeLayout
            android:id="@+id/cardViewContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/mTextViewCountryDetail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="24sp"
                android:layout_marginTop="10dp"
                android:text="@string/countryName" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/mTextViewDetailCountry"
                android:layout_marginLeft="20dp"
                android:layout_marginStart="150dp"
                android:layout_marginTop="10dp"
                android:textSize="24sp"
                android:transitionName="mTextViewDetailCountryTransition"
                tools:text="Country:"/>

            <TextView
                android:id="@+id/mTextViewCityDetail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="24sp"
                android:layout_marginTop="50dp"
                android:text="@string/cityName" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/mTextViewDetailCity"
                android:transitionName="mTextViewDetailCityTransition"
                android:layout_marginLeft="20dp"
                android:layout_marginStart="150dp"
                android:layout_marginTop="50dp"
                android:textSize="24sp"
                tools:text="City:"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/mTextViewCount"
                android:layout_marginTop="90dp"
                android:textSize="24sp"
                android:text="@string/countName"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/mTextViewDetailCount"
                android:transitionName="mTextViewDetailCountTransition"
                android:layout_marginLeft="20dp"
                android:layout_marginStart="150dp"
                android:layout_marginTop="90dp"
                android:textSize="24sp"
                tools:text="Count:"/>

        </RelativeLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/mTextViewDetailLoremIpsum"
            android:textSize="19sp"
            android:layout_marginTop="10dp"
            tools:text="@string/lorepIpsumText"
            android:text="@string/lorepIpsumText"/>

    </LinearLayout>

</android.support.v7.widget.CardView>